<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="10dp"
    android:focusable="true"
    android:background="@drawable/shape_bg_white">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="110dp"
            android:layout_height="72dp"
            android:scaleType="fitXY"
            tools:background="@color/colorAccent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/card_view"
        android:layout_toEndOf="@id/card_view"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:text="默认的辩题长度两行" />

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_toEndOf="@id/card_view"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="12sp"
        tools:text="page1-4 Main scene Main scene Main scene Main scene" />

    <TextView
        android:id="@+id/tv_read_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_course_play"
        android:drawablePadding="4dp"
        android:layout_toEndOf="@id/card_view"
        tools:text="浏览量2"
        android:textSize="12sp"
        android:layout_alignBottom="@id/card_view"
        android:textColor="@color/default_gray_999_personal"
        tools:visibility="visible"/>

</RelativeLayout>