<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题-->
    <RelativeLayout
        android:id="@+id/rl_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:shadowColor="#ff000000"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="3.0"
            android:text="购买会员"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />


        <com.iyuba.core.common.widget.Button
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/title_btn_background"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <!--用户-->
        <TextView
            android:id="@+id/payorder_username_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_hint"
            android:textColor="@color/report_dialog_gray" />
        <TextView
            android:id="@+id/payorder_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/payorder_username_hint_tv"
            android:layout_toRightOf="@id/payorder_username_hint_tv"
            android:textColor="#393939"
            tools:text="iyuba" />

        <!--订单信息-->
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/payorder_orderinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payorder_username_tv"
            android:text="订单信息:"
            android:textColor="@color/report_dialog_gray" />
        <TextView
            android:id="@+id/payorder_orderinfo_de"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/payorder_orderinfo"
            android:layout_toRightOf="@id/payorder_orderinfo"
            android:textColor="#393939"
            tools:text="iyuba" />

        <!--支付价格-->
        <TextView
            android:id="@+id/payorder_rmb_amount_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payorder_orderinfo"
            android:layout_marginTop="15dp"
            android:text="@string/rmb_amount_hint"
            android:textColor="@color/report_dialog_gray" />
        <TextView
            android:id="@+id/payorder_rmb_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/payorder_rmb_amount_hint_tv"
            android:layout_toRightOf="@id/payorder_rmb_amount_hint_tv"
            android:textColor="#F07203"
            tools:text="19.9元" />

        <!--抵扣价格-->
        <LinearLayout
            android:id="@+id/deduction_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_below="@id/payorder_rmb_amount_hint_tv"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:text="钱包抵扣"/>
            <TextView
                android:id="@+id/userMoney_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="(可用钱包：10元)"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:id="@+id/clickDeduction_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/deduction_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#F07203"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:text="5元"/>
                <ImageView
                    android:id="@+id/showDeduction_iv"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_next_gray"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="@string/choose_pay_method"
        android:textColor="#818181" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/gray" />

    <com.iyuba.core.me.pay.NoScrollListView
        android:id="@+id/payorder_methods_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#dedede"
        android:dividerHeight="1dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/gray" />

    <TextView
        android:id="@+id/vip_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/payorder_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/pay_confirm_button"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="@string/pay_confirm"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>