<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="?android:actionBarSize"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:text="功能权限说明"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_f2_personal"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>
    <TextView
        android:id="@+id/msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:lineSpacingExtra="5dp"

        android:layout_margin="10dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_marginBottom="15dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/msg"
        app:layout_constraintBottom_toTopOf="@id/apply"
        />
    <TextView
        android:id="@+id/apply"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="@android:color/holo_blue_light"
        android:text="确定授权"
        android:padding="15dp"
        android:layout_marginBottom="10dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:text="取消使用"
        android:padding="15dp"
        android:layout_marginEnd="20dp"

        app:layout_constraintRight_toLeftOf="@id/apply"
        app:layout_constraintTop_toTopOf="@id/apply"
        app:layout_constraintBottom_toBottomOf="@id/apply"
        />

</androidx.constraintlayout.widget.ConstraintLayout>