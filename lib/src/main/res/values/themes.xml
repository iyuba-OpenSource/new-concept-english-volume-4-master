<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
        <!--<item name="android:colorBackground">@color/colorPrimaryDark</item>-->
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="TextAppearance15" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SeekBar_Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">6.0dip</item>
        <item name="android:minHeight">6.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/seekbar_horizontal</item>
        <item name="android:thumb">@drawable/ic_seek_thumb</item>
        <item name="android:thumbOffset">10.0dip</item>
    </style>

    <style name="FiveRatingBar" parent="@android:style/Widget.RatingBar">
               
        <item name="android:progressDrawable">@drawable/five_rating_bar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>