<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:roundProgress="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >


        <RelativeLayout
            android:id="@+id/download"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:id="@+id/download_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           >

                <com.iyuba.core.common.widget.RoundProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/roundBar1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:background="@drawable/download"
                    android:visibility="visible"
                    roundProgress:circleColor="@color/transparent"
                    roundProgress:circleProgressColor="@color/blue"
                    roundProgress:circleWidth="4dip"
                    roundProgress:textColor="#9A32CD"
                    roundProgress:textIsDisplayable="false" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/image_downloaded"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:background="@drawable/downloaded"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/download_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/download"
            android:layout_centerHorizontal="true"
            android:text="12/72"
            android:textColor="#655373"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/download_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="新概念第一册"
            android:textColor="#77695C"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>