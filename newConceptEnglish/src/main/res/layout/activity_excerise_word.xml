<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/titlebar_lightgray_bg">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_button" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toStartOf="@+id/btn_share"
            android:layout_toEndOf="@id/btn_back"
            android:gravity="center"
            android:maxLines="2"
            android:shadowColor="#ff000000"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="3.0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/whitesmoke"
            tools:ignore="UnknownIdInLayout" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            tools:visibility="visible"
            android:background="@drawable/share_normal" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:background="#F9F9F9"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:text="日语"
                android:textColor="@color/black"
                android:textSize="30sp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/rb_card_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                app:layout_constraintWidth_percent=".85"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_word">
                <TextView
                    android:id="@+id/rb_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="50dp"
                    android:background="@drawable/word_exercise_white"
                    android:button="@null"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="选项一"
                    android:textColor="@color/black"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/rb_card_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginTop="10dp"

                app:layout_constraintLeft_toLeftOf="@id/rb_card_1"
                app:layout_constraintRight_toRightOf="@id/rb_card_1"
                app:layout_constraintTop_toBottomOf="@id/rb_card_1">
                <TextView
                    android:id="@+id/rb_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="50dp"
                    android:background="@drawable/word_exercise_white"
                    android:button="@null"
                    android:gravity="center"
                    android:text="选项二"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/rb_card_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"

                app:layout_constraintLeft_toLeftOf="@id/rb_card_1"
                app:layout_constraintRight_toRightOf="@id/rb_card_1"
                app:layout_constraintTop_toBottomOf="@id/rb_card_2">
                <TextView
                    android:id="@+id/rb_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="50dp"
                    android:background="@drawable/word_exercise_white"
                    android:button="@null"
                    android:gravity="center"
                    android:text="选项三"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/rb_card_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                app:layout_constraintLeft_toLeftOf="@id/rb_card_1"
                app:layout_constraintRight_toRightOf="@id/rb_card_1"
                app:layout_constraintTop_toBottomOf="@id/rb_card_3"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <TextView
                    android:id="@+id/rb_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="50dp"
                    android:background="@drawable/word_exercise_white"
                    android:button="@null"
                    android:gravity="center"
                    android:text="选项四"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_word_button"
                android:text="下一个"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>