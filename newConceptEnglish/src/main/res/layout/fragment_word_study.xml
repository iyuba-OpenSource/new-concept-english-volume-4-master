<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/titlebar_lightgray_bg">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_button" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_toStartOf="@+id/btn_auto"
            android:layout_toEndOf="@id/btn_back"
            android:gravity="center"
            android:maxLines="2"
            android:shadowColor="#ff000000"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="3.0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/whitesmoke"
            tools:ignore="UnknownIdInLayout" />

        <ImageView
            android:id="@+id/btn_auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_auto_false" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/titlebar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/bg_round_corner_white_noborder"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="123"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/collect"
                    android:layout_width="42dp"
                    android:layout_height="19dp"
                    android:layout_alignBaseline="@id/word"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:background="@color/white"
                    android:button="@drawable/selector_collect"
                    android:paddingRight="20dp"
                    android:text="" />


                <ImageView
                    android:id="@+id/audioWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/word"
                    android:layout_alignStart="@+id/word"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/anim_word_pass_player" />

                <TextView
                    android:id="@+id/pron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/word"
                    android:layout_alignTop="@+id/audioWord"
                    android:layout_alignBottom="@+id/audioWord"
                    android:layout_toEndOf="@+id/audioWord"
                    android:gravity="center"
                    android:text="123"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/def"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/audioWord"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:text="【123】"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/bg_round_corner_white_noborder">

                <!--内容部分-->
                <RelativeLayout
                    android:id="@+id/re_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/video_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/play_btn"
                        app:tint="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_swift_normal" />

                    <ImageView
                        android:id="@+id/img_trans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/change"
                        android:padding="10dp"
                        android:src="@drawable/ic_w_trans"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/sentence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toStartOf="@id/img_trans"
                        android:layout_toEndOf="@id/video_play"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        tools:text="I have no opinion，I have no opinion，I have no opinion，I have no opinion"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/sentenceCn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sentence"
                        android:layout_marginBottom="10dp"
                        android:layout_toStartOf="@id/img_trans"
                        android:layout_toEndOf="@id/video_play"
                        android:gravity="center"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        tools:text="这件事上没有意见，好或不好的都没有。" />
                </RelativeLayout>

                <!--视频界面-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/videoLayout"
                    android:layout_width="280dp"
                    android:layout_height="160dp"
                    android:layout_marginBottom="10dp"

                    android:layout_below="@id/re_content"
                    android:layout_centerHorizontal="true"
                    >
                    <com.google.android.exoplayer2.ui.PlayerView
                        android:id="@+id/video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="视频播放器"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                    <ImageView
                        android:id="@+id/videoPic"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="fitXY"
                        android:contentDescription="视频图片"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                    <TextView
                        android:id="@+id/videoPlace"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_corner_theme_10dp"
                        android:gravity="center"
                        android:lineSpacingExtra="5dp"
                        android:padding="10dp"
                        android:contentDescription="占位图"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <ProgressBar
                        android:id="@+id/videoProgress"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:contentDescription="播放加载"

                        app:layout_constraintHeight_percent=".35"
                        app:layout_constraintDimensionRatio="1:1"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--分数部分-->
                <LinearLayout
                    android:id="@+id/ll_middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/videoLayout"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/re_score"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/ic_pass_score"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@color/green"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/score"
                            android:layout_toEndOf="@+id/score"
                            android:paddingBottom="6dp"
                            android:text="分"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_score_60"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="勤能补拙，每天都来练一练！"
                        android:textColor="@color/black_3"
                        android:textSize="15sp" />

                </LinearLayout>

                <!--评测操作-->
                <RelativeLayout
                    android:id="@+id/re_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_below="@+id/ll_middle"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="40dp"
                        android:layout_toStartOf="@+id/re_eval"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/play"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/btn_circle_bg"
                            android:src="@drawable/anim_word_player" />

                        <TextView
                            android:id="@+id/tv_play"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="听原声"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/re_eval"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/record"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/anim_word_eval" />

                        <ProgressBar
                            android:id="@+id/progressBar_eval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/record"
                            android:layout_alignBottom="@+id/record"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/anim_word_eval"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/recordText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/record"
                            android:layout_alignStart="@+id/record"
                            android:layout_alignEnd="@+id/record"
                            android:gravity="center"
                            android:text="轻点开始录音"
                            android:textSize="12sp" />

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/evalLayout"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        android:layout_toEndOf="@+id/re_eval"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/eval"
                            android:layout_width="50dp"
                            android:layout_height="50dp"

                            android:background="@drawable/btn_circle_bg"
                            android:src="@drawable/anim_word_audio" />

                        <TextView
                            android:id="@+id/evalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"

                            android:text="听跟读"
                            android:textSize="12sp" />
                    </LinearLayout>


                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/pagePre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_excerise_btn"
            android:gravity="center"
            android:text="上一个" />

        <TextView
            android:id="@+id/pageIndex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1/50" />

        <TextView
            android:id="@+id/pageNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_excerise_btn"
            android:gravity="center"
            android:text="下一个" />


    </LinearLayout>

</RelativeLayout>
