<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mView"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/layoutView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <!--用户信息-->
        <include layout="@layout/dialog_study_report_common_part" />

        <!--主要数据内容-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            >
            <LinearLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    />

                <View
                    android:id="@+id/middle_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true"
                    />

                <!--头部-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/image_baogao"
                        android:layout_width="23dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/report_dialog_baogao"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/image_baogao"
                        android:layout_marginLeft="8dp"
                        android:textSize="17sp"
                        android:textColor="@color/commo_text_color"
                        android:text="学习报告"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="10dp"
                    android:text="单词列表"
                    android:textColor="@color/report_dialog_gray"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/no_word_img"
                    android:layout_width="100dp"
                    android:layout_height="86dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/report_dialog_no_word"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/words_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="31dp"
                    android:orientation="vertical"/>

                <TextView
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/newWords_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/words_linear"
                    android:text="生词列表"
                    android:textColor="@color/report_dialog_gray"
                    android:textSize="16sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/no_new_word_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/commo_text_color"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/newWords_text"
                    android:text="真棒!单词全部认识了呢!" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/new_words_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/newWords_text"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="31dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--其他信息-->
        <include layout="@layout/dialog_study_report_common_part_bottom" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>