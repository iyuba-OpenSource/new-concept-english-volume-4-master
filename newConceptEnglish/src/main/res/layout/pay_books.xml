<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_color">

        <ImageButton
            android:id="@+id/titlebar_back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:shadowColor="#ff000000"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="3.0"
            android:text="确认支付"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.iyuba.conceptEnglish.widget.MyListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:cacheColorHint="#00000000"></com.iyuba.conceptEnglish.widget.MyListView>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#dedede" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/choose_pay_method"
            android:textColor="#818181" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#dedede" />

        <com.iyuba.core.me.pay.NoScrollListView
            android:id="@+id/payorder_methods_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#dedede"
            android:dividerHeight="1dp"></com.iyuba.core.me.pay.NoScrollListView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#dedede" />

        <Button
            android:id="@+id/payorder_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/pay_confirm_button"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/pay_confirm"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>