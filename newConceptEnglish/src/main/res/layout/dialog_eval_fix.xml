<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--数据显示-->
    <LinearLayout
        android:id="@+id/dataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发音解析"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/word"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close_common"
                android:tint="@color/colorPrimary"/>

        </LinearLayout>
        <TextView
            android:id="@+id/sentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:text="点击每个单词可查看发音解析"
            android:textColor="@color/gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="正确发音："/>
            <TextView
                android:id="@+id/wordPron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_volumn_common"
                android:tint="@color/colorPrimary"
                android:visibility="gone"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="用户发音："/>
            <TextView
                android:id="@+id/userPron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="单词释义："/>
            <TextView
                android:id="@+id/wordDef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="再试着跟读一遍这个单词吧"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_gray_bg"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/playAudio"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_play_fix"
                android:tint="@color/white"
                android:padding="5dp"
                android:background="@drawable/shape_circle_theme"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/recordAudio"
                app:layout_constraintRight_toLeftOf="@id/recordAudio"
                app:layout_constraintBottom_toBottomOf="@id/recordAudio"
                />
            <TextView
                android:id="@+id/playAudioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="听原音"

                app:layout_constraintLeft_toLeftOf="@id/playAudio"
                app:layout_constraintRight_toRightOf="@id/playAudio"
                app:layout_constraintTop_toBottomOf="@id/playAudio"
                app:layout_constraintTop_toTopOf="@id/recordAudioText"
                app:layout_constraintBottom_toBottomOf="@id/recordAudioText"/>

            <ImageView
                android:id="@+id/recordAudio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_record_fix"
                android:tint="@color/white"
                android:padding="5dp"
                android:background="@drawable/shape_circle_theme"

                app:layout_constraintLeft_toRightOf="@id/playAudio"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/evalAudio"
                />
            <TextView
                android:id="@+id/recordAudioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="点击录音"
                android:layout_marginTop="10dp"

                app:layout_constraintLeft_toLeftOf="@id/recordAudio"
                app:layout_constraintRight_toRightOf="@id/recordAudio"
                app:layout_constraintTop_toBottomOf="@id/recordAudio"/>

            <ImageView
                android:id="@+id/evalAudio"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_volumn_fix"
                android:tint="@color/white"
                android:padding="5dp"
                android:background="@drawable/shape_circle_theme"

                app:layout_constraintLeft_toRightOf="@id/recordAudio"
                app:layout_constraintTop_toTopOf="@id/recordAudio"
                app:layout_constraintBottom_toBottomOf="@id/recordAudio"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/evalAudioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="成绩"

                app:layout_constraintLeft_toLeftOf="@id/evalAudio"
                app:layout_constraintRight_toRightOf="@id/evalAudio"
                app:layout_constraintTop_toBottomOf="@id/evalAudio"
                app:layout_constraintTop_toTopOf="@id/recordAudioText"
                app:layout_constraintBottom_toBottomOf="@id/recordAudioText"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <!--状态显示-->
    <LinearLayout
        android:id="@+id/stateLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#e6ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="false"
        android:visibility="visible"
        tools:visibility="gone"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ProgressBar
            android:id="@+id/progressLoading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminateTint="@color/colorPrimary"/>
        <TextView
            android:id="@+id/progressMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:text="未查询到纠音数据"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>