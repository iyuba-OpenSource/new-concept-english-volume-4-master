<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_word_close"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"/>

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="296dp"
        android:layout_height="302dp"
        android:background="@drawable/bg_word_share_top"
        android:layout_below="@+id/iv_close"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/txt_stage_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="恭喜闯关20关"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="200dp"/>

        <TextView
            android:id="@+id/txt_word_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共学习100个"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_stage_num"
            android:paddingTop="7dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingBottom="20dp"/>

    </RelativeLayout>


    <Button
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/bg_word_share"
        android:text="分享领红包"
        android:textColor="@color/white" />


</RelativeLayout>