        app:layout_constraintVertical_bias=".1"

        app:layout_constraintLeft_toLeftOf="@id/practisePractisePic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/practisePractisePic"
        app:layout_constraintBottom_toBottomOf="@id/practisePractisePic"/>
