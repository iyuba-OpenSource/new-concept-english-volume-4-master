        android:layout_marginTop="-10dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/leftPicLayout"
        app:layout_constraintTop_toBottomOf="@id/spaceListen"/>
