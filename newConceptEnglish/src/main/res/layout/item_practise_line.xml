        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/boxPractisePic"
        app:layout_constraintTop_toTopOf="@id/boxPractisePic"
        app:layout_constraintBottom_toBottomOf="@id/boxPractisePic"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_practise_grass"

        app:layout_constraintHorizontal_bias=".6"
        app:layout_constraintVertical_bias=".8"

        app:layout_constraintLeft_toRightOf="@id/boxPractisePic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/boxPractisePic"
        app:layout_constraintBottom_toBottomOf="@id/boxPractisePic"/>

