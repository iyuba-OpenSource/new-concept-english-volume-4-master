<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/backlayout"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:orientation="vertical">    <RelativeLayout        android:id="@+id/relativeLayout_title"        android:layout_width="fill_parent"        android:layout_height="50dp"        android:background="@drawable/titlebar_lightgray_bg">        <ImageView            android:id="@+id/button_back"            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_alignParentLeft="true"            android:layout_centerVertical="true"            android:src="@drawable/back_button" />        <TextView            android:id="@+id/title"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:layout_gravity="center_vertical"            android:gravity="center"            android:shadowColor="#ff000000"            android:shadowDx="3.0"            android:shadowDy="3.0"            android:shadowRadius="3.0"            android:text="课本选择"            android:textAppearance="?android:attr/textAppearanceLarge"            android:textColor="@color/whitesmoke" />        <ImageView            android:id="@+id/download"            android:layout_width="50dp"            android:layout_height="50dp"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:padding="10dp"            android:src="@drawable/download_tag" />    </RelativeLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:gravity="center_horizontal"        android:orientation="vertical">        <RadioGroup            android:id="@+id/select_group"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="27dp"            android:layout_marginBottom="43dp"            android:orientation="horizontal"            android:background="@drawable/gray_fillet_background"            >            <RadioButton                android:id="@+id/america_pronunciation"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/book_choose_selector"                android:text="新概念(美音)"                android:button="@null"                android:paddingBottom="6dp"                android:paddingTop="6dp"                android:paddingLeft="13dp"                android:paddingRight="13dp"                android:textColor="@color/bookChooseUncheck"                android:textSize="13sp"                />            <RadioButton                android:id="@+id/english_pronunciation"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/book_choose_selector"                android:text="新概念(英音)"                android:button="@null"                android:paddingBottom="6dp"                android:paddingTop="6dp"                android:paddingLeft="13dp"                android:paddingRight="13dp"                android:textColor="@color/bookChooseUncheck"                android:textSize="13sp"                />            <RadioButton                android:id="@+id/youth"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:background="@drawable/book_choose_selector"                android:text="新概念(青少版)"                android:button="@null"                android:paddingBottom="6dp"                android:paddingTop="6dp"                android:paddingLeft="13dp"                android:paddingRight="13dp"                android:textColor="@color/bookChooseUncheck"                android:textSize="12sp"                />        </RadioGroup>        <androidx.recyclerview.widget.RecyclerView            android:id="@+id/recycler"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1" />    </LinearLayout></LinearLayout>