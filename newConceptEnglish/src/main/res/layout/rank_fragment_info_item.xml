<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="60dp">
        <!-- 图标-->
        <ImageView
            android:id="@+id/rank_logo_image"
            android:layout_width="20dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/rank_gold"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/rank_logo_text"
            android:layout_width="20dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:background="@drawable/bg_sign_today"
            android:text="4"
            android:textColor="#FF4F14"
            />

        <!--用户头像 -->
        <com.iyuba.conceptEnglish.widget.CircleImageView

            android:id="@+id/user_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rank_logo_image"
            android:src="@drawable/rank_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/user_image_text">

            <TextView
                android:id="@+id/rank_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/user_image"
                android:text="sllbsjj"
                android:layout_alignTop="@+id/user_image"/>
            <TextView
                android:id="@+id/rank_user_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12053"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/user_image"
                android:layout_alignBottom="@+id/user_image"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/user_image_text"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rank_logo_image"
            android:gravity="center"
            android:background="@drawable/rank_blue"
            android:text="C"
            android:textColor="@color/whitesmoke"
            android:textSize="12sp" />





    </RelativeLayout>
    <TextView
        android:id="@+id/rank_user_info"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="60dp"
        android:gravity="left|center_vertical"
        android:layout_marginRight="10dp"
        android:text="WPM值:152"
        />

</LinearLayout>