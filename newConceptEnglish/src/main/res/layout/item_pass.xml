<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/passText"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/shape_circle_theme"
        android:textSize="12sp"
        android:textColor="@color/white"

        android:text="lesson 1"
        android:gravity="center"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:id="@+id/leftView"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/colorPrimary"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/passText"
        app:layout_constraintTop_toTopOf="@id/passText"
        app:layout_constraintBottom_toBottomOf="@id/passText"/>
    <View
        android:id="@+id/rightView"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/colorPrimary"

        app:layout_constraintLeft_toRightOf="@id/passText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/passText"
        app:layout_constraintBottom_toBottomOf="@id/passText"/>
    <View
        android:id="@+id/topView"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"

        app:layout_constraintLeft_toLeftOf="@id/passText"
        app:layout_constraintRight_toRightOf="@id/passText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/passText"/>
    <View
        android:id="@+id/bottomView"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"

        app:layout_constraintLeft_toLeftOf="@id/passText"
        app:layout_constraintRight_toRightOf="@id/passText"
        app:layout_constraintTop_toBottomOf="@id/passText"
        app:layout_constraintBaseline_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>