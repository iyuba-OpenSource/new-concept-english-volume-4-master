<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/me_item_bg"
    android:descendantFocusability="blocksDescendants">

    <com.iyuba.conceptEnglish.widget.CircleImageView
        android:id="@+id/comment_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/userimg" />

    <RelativeLayout
        android:id="@+id/sen_re"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/sen_index_bkg"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/sen_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/comment_image"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/comment_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/reread_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="6dp"
        android:src="@drawable/compose" />

    <RelativeLayout
        android:id="@+id/re_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/comment_image">


        <RelativeLayout
            android:id="@+id/comment_voice_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <ImageView
                android:id="@+id/comment_body_voice_icon"
                android:layout_width="50dp"
                android:layout_height="19dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/chatfrom_voice_playing" />
        </RelativeLayout>

        <TextView
            android:id="@+id/comment_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/comment_voice_view"
            android:layout_alignBottom="@+id/comment_voice_view"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/comment_voice_view"
            android:textColor="@color/green_70"
            android:textSize="14sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/lin_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_voice_view"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comment_letter_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:text="123456"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="123"
                android:textColor="@color/gray" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/comment_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_comment"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/gray"
            tools:text="12:34" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/iv_comment_share"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/agree"
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/agree"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/agree_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_comment_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/reply"
            android:padding="5dp"
            android:src="@drawable/ic_comment_share"
            android:visibility="gone"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/against"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/against"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/against_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </LinearLayout>


        <Button
            android:id="@+id/reply"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/friendactivity_comment_icon" />

    </RelativeLayout>

</RelativeLayout>