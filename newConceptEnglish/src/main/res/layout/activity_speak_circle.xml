<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/voa_title_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/titlebar_lightgray_bg">

            <ImageButton
                android:id="@+id/ibtn_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/back_button" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/line_shape" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/line_shape" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#ff000000"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:text="口语圈"
                android:shadowRadius="3.0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/whitesmoke" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                android:background="@drawable/line_shape" />



            <ImageButton
                android:id="@+id/button_show_searchLayout"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:background="@drawable/search" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/search_title_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/titlebar_lightgray_bg"
            android:visibility="gone">

            <Button
                android:id="@+id/button_complete"
                android:layout_width="46dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_shape"
                android:text="@string/complete"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/back_button" />


            <RelativeLayout
                android:id="@+id/search_text"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/button_complete"
                android:layout_toRightOf="@id/button_back"
                android:background="@drawable/border">

                <Button
                    android:id="@+id/search_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/search_icon" />

                <EditText
                    android:id="@+id/editText_search"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/search_icon"
                    android:background="#00000000"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:background="@drawable/rank_button"
            android:gravity="center"
            android:text="最新"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_recently"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:background="@drawable/rank_button"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_my"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:background="@drawable/rank_button"
            android:gravity="center"
            android:text="好友"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_second" />

</RelativeLayout>