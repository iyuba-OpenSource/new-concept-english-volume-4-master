<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_score"
        android:layout_width="20dp"
        android:layout_height="17dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="17dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/evaluating_sentence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/commo_text_color"
        android:textSize="16sp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="15dp"

        app:layout_constraintLeft_toRightOf="@id/image_score"
        app:layout_constraintRight_toLeftOf="@id/item_score"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_marginEnd="1dp"
        android:textColor="@color/report_dialog_good_color"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fen"/>
    <TextView
        android:id="@+id/fen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BFBFBF"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:text="åˆ†"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>