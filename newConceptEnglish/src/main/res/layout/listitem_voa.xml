                android:id="@+id/voaN_layout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_title_bg"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/voa"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/voaN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>-->

            <!--新版样式-->
            <RelativeLayout
                android:id="@+id/voaN_layout"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/voa_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter" />
                <TextView
                    android:id="@+id/voa_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/download"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignBottom="@+id/voaTitle_layout"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/download_layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:visibility="visible">

                    <com.iyuba.core.common.widget.RoundProgressBar
                        android:id="@+id/roundBar1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/pause_download"
                        android:visibility="visible"
                        roundProgress:circleColor="@color/white"
                        roundProgress:circleProgressColor="@color/colorPrimary"
                        roundProgress:circleWidth="1dip"
                        roundProgress:textColor="#9A32CD"
                        roundProgress:textIsDisplayable="false" />
                </RelativeLayout>

                <com.iyuba.core.common.widget.RoundProgressBar
                    android:id="@+id/image_downloaded"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/downloaded"
                    roundProgress:circleProgressColor="@color/colorPrimary"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/voaTitle_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/download"
                android:layout_toEndOf="@id/voaN_layout"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:hint="显示英文显示"
                    android:textColor="#414141"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/titleCn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:hint="显示中文显示"
                    android:textColor="#A5A5A5"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/lessonType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    android:hint="英音"
                    android:textColor="#A5A5A5"
                    android:visibility="gone"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>