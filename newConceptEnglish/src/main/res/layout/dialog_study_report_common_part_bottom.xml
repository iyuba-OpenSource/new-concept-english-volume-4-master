<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/tips_cardView"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="17dp"
        android:visibility="gone"
        tools:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/some_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#8E8E8E"
                android:text="提示:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/some_hint"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/no_longer_tips"
                android:text="此报告可在本页面（课文详情页面）右上角的设置中打开或关闭"
                android:textColor="#A5A5A5"
                android:textSize="12sp" />

            <Button
                android:id="@+id/no_longer_tips"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="37dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_rectangle_corner_yellow_fba417"
                android:text="不再提示"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/cancel_tips"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="79dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_rectangle_corner_stroke_yellow_fba417"
                android:text="取消"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/shareLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:src="@drawable/download_newconcept"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:textSize="14sp"
            android:textColor="@color/commo_text_color"
            android:text="扫一扫下载新概念英语"/>
        <Button
            android:id="@+id/dialog_report_share_btn"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_rectangle_corner_yellow_fba417"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="55dp"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="分享到朋友圈"
            />
    </LinearLayout>
</LinearLayout>