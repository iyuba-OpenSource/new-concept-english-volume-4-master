<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/titlebar_lightgray_bg">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_button" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_toStartOf="@+id/btn_auto"
            android:layout_toEndOf="@id/btn_back"
            android:gravity="center"
            android:maxLines="2"
            android:shadowColor="#ff000000"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="3.0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/whitesmoke"
            tools:ignore="UnknownIdInLayout" />

        <ImageView
            android:id="@+id/btn_auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_auto_false" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/titlebar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/bg_round_corner_white_noborder"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tv_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="123"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/cb_collect"
                    android:layout_width="42dp"
                    android:layout_height="19dp"
                    android:layout_alignBaseline="@id/tv_word"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:background="@color/white"
                    android:button="@drawable/selector_collect"
                    android:paddingRight="20dp"
                    android:text="" />


                <ImageView
                    android:id="@+id/img_speaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_word"
                    android:layout_alignStart="@+id/tv_word"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/anim_word_pass_player" />

                <TextView
                    android:id="@+id/tv_pron"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_word"
                    android:layout_alignTop="@+id/img_speaker"
                    android:layout_alignBottom="@+id/img_speaker"
                    android:layout_toEndOf="@+id/img_speaker"
                    android:gravity="center"
                    android:text="123"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_speaker"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:text="【123】"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/bg_round_corner_white_noborder">

                <RelativeLayout
                    android:id="@+id/re_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/video_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/play_btn"
                        app:tint="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/img_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_swift_normal" />

                    <ImageView
                        android:id="@+id/img_trans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/img_mode"
                        android:padding="10dp"
                        android:src="@drawable/ic_w_trans"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:layout_toStartOf="@id/img_trans"
                        android:layout_toEndOf="@id/video_play"
                        android:gravity="center_horizontal"
                        tools:text="I have no opinion，I have no opinion，I have no opinion，I have no opinion"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_content_cn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_content"
                        android:layout_toStartOf="@id/img_trans"
                        android:layout_toEndOf="@id/video_play"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal"
                        tools:text="这件事上没有意见，好或不好的都没有。"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/word_img"
                        android:layout_width="280dp"
                        android:layout_height="160dp"
                        android:scaleType="fitXY"
                        tools:src="@drawable/ic_bg_share1" />

                    <com.devbrackets.android.exomedia.ui.widget.VideoView
                        android:id="@+id/video_view"
                        android:layout_width="280dp"
                        android:layout_height="160dp"
                        android:background="#11000000"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_video"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/re_score"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/ic_pass_score"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@color/green"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_score"
                            android:layout_toEndOf="@+id/tv_score"
                            android:paddingBottom="6dp"
                            android:text="分"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_score_60"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="勤能补拙，每天都来练一练！"
                        android:textColor="@color/black_3"
                        android:textSize="15sp" />

                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/re_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_below="@+id/ll_middle"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="40dp"
                        android:layout_toStartOf="@+id/re_eval"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_play"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/btn_circle_bg"
                            android:src="@drawable/anim_word_player" />

                        <TextView
                            android:id="@+id/tv_play"
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="听原声"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/re_eval"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img_eval"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/anim_word_eval" />

                        <ProgressBar
                            android:id="@+id/progressBar_eval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/img_eval"
                            android:layout_alignBottom="@+id/img_eval"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/anim_word_eval"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_eval"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img_eval"
                            android:layout_alignStart="@+id/img_eval"
                            android:layout_alignEnd="@+id/img_eval"
                            android:gravity="center"
                            android:text="轻点开始录音"
                            android:textSize="12sp" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dp"
                        android:layout_toEndOf="@+id/re_eval"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_user"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerVertical="true"

                            android:background="@drawable/btn_circle_bg"
                            android:src="@drawable/anim_word_audio" />

                        <TextView
                            android:id="@+id/tv_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_user"
                            android:layout_alignStart="@+id/img_user"
                            android:layout_alignEnd="@+id/img_user"
                            android:layout_marginTop="5dp"

                            android:text="听跟读"
                            android:textSize="12sp" />
                    </LinearLayout>


                </RelativeLayout>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_former"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_next_word_normal"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="上一个" />

        <TextView
            android:id="@+id/tv_show_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1/50" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_next_word_normal"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="下一个" />


    </LinearLayout>

</RelativeLayout>
