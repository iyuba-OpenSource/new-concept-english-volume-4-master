<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/backlayout"    android:layout_width="fill_parent"    android:layout_height="fill_parent"    android:fitsSystemWindows="true">    <!--仅用作填充作用-->    <View        android:id="@+id/fillStatusBarView"        android:layout_width="match_parent"        android:layout_height="20dp"        android:background="@color/colorPrimary"        android:orientation="horizontal"        android:visibility="gone"/>    <!--标题页面-->    <RelativeLayout        android:id="@+id/title_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_below="@+id/fillStatusBarView">        <LinearLayout            android:id="@+id/voa_title_layout"            android:layout_width="fill_parent"            android:layout_height="56dp"            android:background="@drawable/titlebar_lightgray_bg">            <ImageButton                android:id="@+id/button_show_category"                android:layout_width="45dp"                android:layout_height="45dp"                android:layout_gravity="center_vertical"                android:background="@drawable/textbook_category" />            <ImageView                android:layout_width="1dp"                android:layout_height="30dp"                android:layout_gravity="center_vertical"                android:background="@drawable/line_shape" />            <ImageView                android:layout_width="1dp"                android:layout_height="30dp"                android:layout_gravity="center_vertical"                android:background="@drawable/line_shape" />            <TextView                android:id="@+id/title"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center_vertical"                android:layout_weight="1"                android:gravity="center"                android:shadowColor="#ff000000"                android:shadowDx="3.0"                android:shadowDy="3.0"                android:shadowRadius="3.0"                android:textAppearance="?android:attr/textAppearanceMedium"                android:textColor="@color/whitesmoke"                tools:text="新概念英语一 (英音)" />            <TextView                android:id="@+id/tv_sync"                android:layout_width="45dp"                android:layout_height="45dp"                android:layout_gravity="center_vertical"                android:gravity="center"                android:text="同步"                android:textColor="@color/white"                android:visibility="gone"                tools:visibility="visible" />            <ImageView                android:layout_width="1dp"                android:layout_height="30dp"                android:layout_gravity="center_vertical"                android:background="@drawable/line_shape" />            <ImageButton                android:id="@+id/button_show_searchLayout"                android:layout_width="45dp"                android:layout_height="45dp"                android:layout_gravity="center_vertical"                android:background="@drawable/search" />        </LinearLayout>        <RelativeLayout            android:id="@+id/search_title_layout"            android:layout_width="fill_parent"            android:layout_height="50dp"            android:background="@drawable/titlebar_lightgray_bg"            android:visibility="gone">            <Button                android:id="@+id/button_complete"                android:layout_width="46dp"                android:layout_height="30dp"                android:layout_alignParentRight="true"                android:layout_centerVertical="true"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:background="@drawable/button_shape"                android:text="@string/complete"                android:textColor="#ffffff" />            <Button                android:id="@+id/button_back"                android:layout_width="40dp"                android:layout_height="40dp"                android:layout_alignParentLeft="true"                android:layout_centerVertical="true"                android:background="@drawable/back_button" />            <RelativeLayout                android:id="@+id/search_text"                android:layout_width="fill_parent"                android:layout_height="38dp"                android:layout_centerVertical="true"                android:layout_marginLeft="5dp"                android:layout_toLeftOf="@+id/button_complete"                android:layout_toRightOf="@id/button_back"                android:background="@drawable/border">                <Button                    android:id="@+id/search_icon"                    android:layout_width="25dp"                    android:layout_height="25dp"                    android:layout_centerVertical="true"                    android:layout_marginLeft="5dp"                    android:background="@drawable/search_icon" />                <EditText                    android:id="@+id/editText_search"                    android:layout_width="fill_parent"                    android:layout_height="wrap_content"                    android:layout_centerVertical="true"                    android:layout_marginLeft="5dp"                    android:layout_toRightOf="@+id/search_icon"                    android:background="#00000000"                    android:singleLine="true"                    android:textColor="#000000"                    android:textCursorDrawable="@null" />            </RelativeLayout>        </RelativeLayout>    </RelativeLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_above="@+id/re_bottom"        android:layout_below="@id/title_layout">        <LinearLayout            android:id="@+id/textbook_mainbody"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@color/whitesmoke"            android:visibility="visible">            <androidx.recyclerview.widget.RecyclerView                tools:listitem="@layout/listitem_voa_home"                android:id="@+id/voa_list"                android:layout_width="fill_parent"                android:layout_height="fill_parent"                android:layout_marginTop="2dp"                android:cacheColorHint="#00000000"                android:divider="@null"                android:dividerHeight="0dp"                android:visibility="visible" />        </LinearLayout>        <RelativeLayout            android:id="@+id/rl_spinner"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@color/white">            <org.angmarch.views.NiceSpinner                android:id="@+id/nice_spinner"                android:layout_width="180dp"                android:layout_height="40dp"                android:layout_centerHorizontal="true"                android:layout_marginTop="5dp"                android:layout_marginBottom="5dp"                android:background="@color/colorPrimary"                app:arrowTint="@color/white"                app:textTint="@color/black" />            <ImageView                android:layout_width="fill_parent"                android:layout_height="2dp"                android:layout_below="@id/nice_spinner"                android:layout_marginLeft="1dp"                android:layout_marginRight="1dp"                android:background="#aacccccc" />        </RelativeLayout>        <RelativeLayout            android:id="@+id/search_result_layout"            android:layout_width="fill_parent"            android:layout_height="fill_parent"            android:background="#F2F2F2"            android:visibility="gone">            <TextView                android:id="@+id/search_info"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_centerHorizontal="true"                android:padding="10dp" />            <ListView                android:id="@+id/search_list"                android:layout_width="fill_parent"                android:layout_height="fill_parent"                android:layout_below="@+id/search_info"                android:cacheColorHint="#00000000"                android:divider="#dcdcdc"                android:dividerHeight="1dp"                android:fadingEdge="none"                android:fastScrollEnabled="true" />        </RelativeLayout>    </RelativeLayout>    <RelativeLayout        android:id="@+id/re_bottom"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_alignParentBottom="true"        android:background="@color/white"        android:visibility="gone"        tools:visibility="visible">        <ImageView            android:layout_width="match_parent"            android:layout_height="0.2dp"            android:background="#cdcdcd" />        <ImageView            android:id="@+id/img_play"            android:layout_width="40dp"            android:layout_height="40dp"            android:layout_alignParentRight="true"            android:layout_marginStart="10dp"            android:layout_marginTop="10dp"            android:layout_marginEnd="10dp"            android:layout_marginBottom="10dp"            android:padding="5dp"            android:src="@drawable/image_play" />        <TextView            android:id="@+id/tv_title"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginStart="20dp"            android:layout_marginEnd="5dp"            android:layout_toStartOf="@+id/img_play"            android:ellipsize="end"            android:singleLine="true"            android:text="Lesson 1 Sorry sir"            android:textColor="@color/black" />        <TextView            android:id="@+id/tv_title_cn"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_alignBottom="@+id/img_play"            android:layout_marginLeft="10dp"            android:layout_marginEnd="10dp"            android:layout_toEndOf="@+id/img_play"            android:ellipsize="end"            android:singleLine="true"            android:text="对不起，先生"            android:textColor="@color/black"            android:visibility="gone" />    </RelativeLayout></RelativeLayout>