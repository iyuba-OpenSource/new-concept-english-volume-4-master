<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/test209_iv_pic"
            android:layout_width="120dp"
            android:minHeight="180dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/test209_iv_sound"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/laba" />

        <TextView
            android:id="@+id/test209_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/test209_fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/test209_fl_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_pic_gray"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/test209_iv_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/luyin" />

                <TextView
                    android:id="@+id/test209_tv_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="轻点后开始录音"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/test209_iv_recording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/wavy_line"
            android:visibility="gone" />
    </FrameLayout>


</LinearLayout>