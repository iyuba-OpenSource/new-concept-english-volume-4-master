<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/test216_iv_sound"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:src="@mipmap/icon_laba" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rctg_bg_hand_writing"
        android:orientation="vertical">

        <com.jn.yyz.practise.util.customize.HandwritingView
            android:id="@+id/test216_hv_hand"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rctg_bg_hand_writing" />


        <TextView
            android:id="@+id/test216_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="识别结果："
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/test216_tv_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_rctg_bg_hand_writing_green"
                android:gravity="center"
                android:padding="15dp"
                android:text="重写"
                android:textColor="?colorPrimary" />

            <TextView
                android:id="@+id/test216_tv_identify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rctg_bg_hand_writing_green"
                android:gravity="center"
                android:padding="15dp"
                android:text="识别"
                android:textColor="?colorPrimary" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>